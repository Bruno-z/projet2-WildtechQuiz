<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="bugbusterzcorp.wildtechquizz.QuizzListActivity">

    <pl.droidsonroids.gif.GifTextView
        android:id="@+id/gifTextViewResult"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/city2"/>

    <ListView
        android:id="@+id/QuizzLIstView"
        android:layout_width="368dp"
        android:layout_height="422dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintHorizontal_bias="0.518"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/textViewChoix"
        tools:layout_editor_absoluteX="22dp" />

    <TextView
        android:id="@+id/textViewChoix"
        android:background="@drawable/round"
        android:layout_width="268dp"
        android:layout_height="76dp"
        android:text="@string/choix_du_quizz"
        android:textSize="30dp"
        android:textAlignment="center"
        android:gravity="center_vertical"
        android:textColor="@color/purple"
        android:layout_marginRight="7dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="7dp"
        app:layout_constraintTop_toTopOf="@+id/gifTextViewResult"
        android:layout_marginTop="32dp" />

    <TextView
        android:id="@+id/textViewSuppression"
        android:layout_width="340dp"
        android:layout_height="55dp"
        android:text="@string/suppression"
        android:textColor="@color/white"
        android:background="#ac434242"
        android:paddingBottom="8dp"
        android:paddingTop="8dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/QuizzLIstView"
        app:layout_constraintHorizontal_bias="0.509" />
</android.support.constraint.ConstraintLayout>
